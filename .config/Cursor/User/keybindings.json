// Place your key bindings in this file to override the defaults
[
    // quickOpen selections
    {
        "key": "ctrl+n",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "vim.active && inQuickOpen"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "vim.active && inQuickOpen"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpen",
        "when": "vim.active && !inQuickOpen && !suggestWidgetVisible"
    },
    {
        "key": "ctrl+m",
        "command": "workbench.action.acceptSelectedQuickOpenItem",
        "when": "vim.active && inQuickOpen"
    },
    {
        "key": "ctrl+m",
        "command": "acceptSelectedSuggestion",
        "when": "vim.active && suggestWidgetVisible && textInputFocus"
    },
    {
        "key": "ctrl+i",
        "command": "acceptSelectedSuggestion",
        "when": "vim.active && suggestWidgetVisible && textInputFocus"
    },
    {
        "key": "ctrl+c",
        "command": "workbench.action.closeQuickOpen",
        "when": "vim.active && inQuickOpen"
    },
    {
        "key": "ctrl+g",
        "command": "workbench.action.closeQuickOpen",
        "when": "vim.active && inQuickOpen"
    },

    // window navigation
    {
        "key": "alt+l",
        "command": "workbench.action.navigateRight",
        "when": "vim.active && (!terminalFocus || terminalCount == 1)"
    },
    {
        "key": "alt+h",
        "command": "workbench.action.navigateLeft",
        "when": "vim.active && (!terminalFocus || terminalCount == 1)"
    },
    {
        "key": "alt+k",
        "command": "workbench.action.navigateUp",
        "when": "vim.active"
    },
    {
        "key": "alt+j",
        "command": "workbench.action.navigateDown",
        "when": "vim.active"
    },
    {
        "key": "alt+l",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "vim.active && (terminalFocus && terminalCount > 1)"
    },
    {
        "key": "alt+h",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "vim.active && (terminalFocus && terminalCount > 1)"
    },

    // tab navigation
    {
        "key": "tab",
        "command": "workbench.action.nextEditorInGroup",
        "when": "vim.active && (vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
    },
    {
        "key": "shift-tab",
        "command": "workbench.action.previousEditorInGroup",
        "when": "vim.active && (vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
    },

    // file explorer
    {
        "key": "ctrl+shift+e",
        "command": "workbench.view.explorer",
        "when": "vim.active && vim.mode == 'Normal' && !filesExplorerFocus"
    },
    {
        "key": "ctrl+shift+e",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "vim.active && filesExplorerFocus"
    },
    {
        "key": "r",
        "command": "renameFile",
        "when": "vim.active && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "y",
        "command": "filesExplorer.copy",
        "when": "vim.active && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "p",
        "command": "filesExplorer.paste",
        "when": "vim.active && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "x",
        "command": "filesExplorer.cut",
        "when": "vim.active && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "d",
        "command": "deleteFile",
        "when": "vim.active && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "a",
        "command": "explorer.newFile",
        "when": "vim.active && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "s",
        "command": "explorer.openToSide",
        "when": "vim.active && filesExplorerFocus && !inputFocus"
    },

    // timeline
    {
        "key": "ctrl+shift+f",
        "command": "timeline.focus",
        "when": "vim.active && vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+shift+f",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "vim.active && view.timeline.visible"
    },
    {
        "key": "ctrl+g",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "vim.active && view.timeline.visible"
    },
    {
        "key": "shift+k",
        "command": "list.showHover",
        "when": "vim.active && view.workbench.scm.visible"
    },

    // search
    {
        "key": "ctrl+shift+h",
        "command": "workbench.action.findInFiles",
        "when": "vim.active && vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+shift+h",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "vim.active && searchViewletFocus && !editorTextFocus"
    },
    {
        "key": "ctrl+g",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "vim.active && searchViewletFocus && !editorTextFocus"
    },

    // sidebar navigation
    {
        "key": "ctrl+h",
        "command": "workbench.action.navigateLeft",
        "when": "vim.active && !editorTextFocus && listFocus"
    },
    {
        "key": "ctrl+g",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "vim.active && !editorTextFocus && listFocus"
    },
    {
        "key": "ctrl+n",
        "command": "list.focusDown",
        "when": "vim.active && !editorTextFocus && listFocus && !inputFocus"
    },
    {
        "key": "ctrl+p",
        "command": "list.focusUp",
        "when": "vim.active && !editorTextFocus && listFocus && !inputFocus"
    },
    {
        "key": "ctrl+m",
        "command": "list.select",
        "when": "vim.active && !editorTextFocus && listFocus && !inputFocus"
    },
    {
        "key": "ctrl+n",
        "command": "list.focusFirst",
        "when": "vim.active && !editorTextFocus && !inQuickOpen && inputFocus"
    },
    {
        "key": "ctrl+p",
        "command": "list.focusLast",
        "when": "vim.active && !editorTextFocus && !inQuickOpen && inputFocus"
    },

    // problems panel
    {
        "key": "ctrl+shift+i",
        "command": "workbench.actions.view.problems",
        "when": "vim.active && vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+shift+i",
        "command": "workbench.actions.view.toggleProblems",
        "when": "vim.active && problemFocus"
    },

    // terminal panel
    {
        "key": "ctrl+shift+t",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "vim.active"
    },
    {
        "key": "alt+i",
        "command": "workbench.action.terminal.split",
        "when": "vim.active && terminalFocus"
    },
    {
        "key": "alt+m",
        "command": "workbench.action.toggleMaximizedPanel",
        "when": "vim.active && terminalFocus"
    },

    // chat
    {
        "key": "ctrl+shift+l",
        "command": "aichat.newchataction"
    },
    {
        "key": "ctrl+l",
        "command": "-aichat.newchataction"
    },
]