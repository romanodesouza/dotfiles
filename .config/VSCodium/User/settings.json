{
    "vim.hlsearch": false,
    "vim.visualstar": true,
    "vim.statusBarColorControl": true,
    "vim.useSystemClipboard": true,
    "vim.ignorecase": true,
    "vim.smartcase": true,
    "vim.useCtrlKeys": true,
    "vim.leader": ",",
    "vim.insertModeKeyBindings": [
        {
            "before": ["leader", "s"],
            "after": ["<Esc>"],
            "commands": ["workbench.action.files.save"]
        },
        {
            "before": ["ctrl+d"],
            "after": ["<Esc>", "l", "x"]
        },
        {
            "before": ["f", "d"],
            "after": ["<Esc>"]
        },
        {
            "before": ["ctrl+g"],
            "after": ["<Esc>"]
        }
    ],
    "vim.visualModeKeyBindings": [
       {
            "before": ["leader", "s"],
            "commands": ["workbench.action.files.save"]
       },
       {
            "before": ["leader", "c"],
            "commands": ["editor.action.commentLine"]
       },
       {
            "before": ["leader", "a"],
            "commands": ["workbench.action.findInFiles"]
       },
       {
           "before": ["C-n"],
           "commands": ["editor.action.addSelectionToNextFindMatch"]
       },
       {
           "before": ["C-x"],
           "commands": ["editor.action.moveSelectionToNextFindMatch"]
       }
    ],
    "vim.normalModeKeyBindings": [
       {
            "before": ["leader", "s"],
            "commands": ["workbench.action.files.save"]
       },
       {
            "before": ["leader", "a"],
            "commands": ["workbench.action.findInFiles"]
       },
       {
            "before": ["leader", "q"],
            "commands": ["workbench.action.closeActiveEditor"]
       },
       {
            "before": ["leader", "c"],
            "commands": ["editor.action.commentLine"]
       },
       {
            "before": ["leader", "v"],
            "commands": [":vsplit"]
       },
       {
            "before": ["leader", "w"],
            "commands": [":only"]
       },
       {
            "before": ["K"],
            "commands": ["editor.action.showHover"]
       },
       {
           "before": ["C-n"],
           "commands": ["editor.action.marker.next"]
       },
       {
            "before": ["space", "i"],
            "commands": ["editor.action.goToImplementation"]
       },
       {
            "before": ["space", "r"],
            "commands": ["editor.action.goToReferences"]
       },
       {
            "before": ["space", "e", "l"],
            "commands": ["workbench.actions.view.problems"]
       },
       {
            "before": ["space", "e", "n"],
            "commands": ["editor.action.marker.nextInFiles"]
       },
       {
            "before": ["space", "e", "p"],
            "commands": ["editor.action.marker.prevInFiles"]
       },
    ],
    "go.formatTool": "goimports",
    "go.lintTool": "golangci-lint",
    "go.useLanguageServer": true,
    "go.languageServerFlags": [
        "-rpc.trace", // for more detailed debug logging
        "serve",
        "--debug=localhost:6060" // to investigate memory usage, see profiles
    ],
    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        // Optional: Disable snippets, as they conflict with completion ranking.
        "editor.snippetSuggestions": "none"
    },
    "[go.mod]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "gopls": {
        // Add parameter placeholders when completing a function.
        "usePlaceholders": false,

        // If true, enable additional analyses with staticcheck.
        // Warning: This will significantly increase memory usage.
        "staticcheck": false
    },
    "go.toolsManagement.autoUpdate": true,

    "catppuccin.boldKeywords": false,
    "catppuccin.italicComments": false,
    "catppuccin.italicKeywords": false,

    "diffEditor.hideUnchangedRegions.enabled": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": true,

    "editor.cursorBlinking": "solid",
    "editor.folding": false,
    "editor.fontFamily": "'Droid Sans Mono', 'monospace', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.fontWeight": "500",
    "editor.guides.indentation": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.lightbulb.enabled": "off",
    "editor.lineHeight": 21,
    "editor.links": false,
    "editor.matchBrackets": "never",
    "editor.minimap.enabled": false,
    "editor.occurrencesHighlight": "off",
    "editor.overviewRulerBorder": false,
    "editor.renderLineHighlight": "line",
    "editor.renderWhitespace": "none",
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 0,

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    "extensions.ignoreRecommendations": false,

    "files.exclude": { "vendor/**": true },

    "scm.diffDecorations": "gutter",

    "terminal.integrated.cwd": "",
    "terminal.integrated.shellIntegration.decorationsEnabled": "overviewRuler",

    "workbench.colorTheme": "Catppuccin Frapp√©",
    "workbench.iconTheme": "eq-material-theme-icons",
    "workbench.sideBar.location": "right",

    "window.menuBarVisibility": "toggle",
}
