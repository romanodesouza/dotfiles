// Place your key bindings in this file to override the defaults
[
    // quickOpen selections
    {
        "key": "ctrl+n",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "vim.active && inQuickOpen"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "vim.active && inQuickOpen"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpen",
        "when": "vim.active && !inQuickOpen && !suggestWidgetVisible"
    },
    {
        "key": "ctrl+m",
        "command": "workbench.action.acceptSelectedQuickOpenItem",
        "when": "vim.active && inQuickOpen"
    },
    {
        "key": "ctrl+m",
        "command": "acceptSelectedSuggestion",
        "when": "vim.active && suggestWidgetVisible && textInputFocus"
    },
    {
        "key": "ctrl+i",
        "command": "acceptSelectedSuggestion",
        "when": "vim.active && suggestWidgetVisible && textInputFocus"
    },
    {
        "key": "ctrl+c",
        "command": "workbench.action.closeQuickOpen",
        "when": "vim.active && inQuickOpen"
    },
    {
        "key": "ctrl+g",
        "command": "workbench.action.closeQuickOpen",
        "when": "vim.active && inQuickOpen"
    },
    {
        "key": "ctrl+m",
        "command": "-editor.action.toggleTabFocusMode",
        "when": "vim.active"
    },

    // window navigation
    {
        "key": "alt+l",
        "command": "workbench.action.navigateRight",
        "when": "vim.active && (!terminalFocus || terminalCount == 1)"
    },
    {
        "key": "alt+h",
        "command": "workbench.action.navigateLeft",
        "when": "vim.active && (!terminalFocus || terminalCount == 1)"
    },
    {
        "key": "alt+k",
        "command": "workbench.action.navigateUp",
        "when": "vim.active"
    },
    {
        "key": "alt+j",
        "command": "workbench.action.navigateDown",
        "when": "vim.active"
    },
    {
        "key": "alt+l",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "vim.active && (terminalFocus && terminalCount > 1)"
    },
    {
        "key": "alt+h",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "vim.active && (terminalFocus && terminalCount > 1)"
    },

    // terminal
    {
        "key": "F12",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "vim.active"
    },
    {
        "key": "alt+i",
        "command": "workbench.action.terminal.split",
        "when": "vim.active && terminalFocus"
    },
    {
        "key": "alt+m",
        "command": "workbench.action.toggleMaximizedPanel",
        "when": "vim.active && terminalFocus"
    },

    // tab navigation
    {
        "key": "tab",
        "command": "workbench.action.nextEditorInGroup",
        "when": "vim.active && (vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
    },
    {
        "key": "shift-tab",
        "command": "workbench.action.previousEditorInGroup",
        "when": "vim.active && (vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
    },

    // fuzzy finder
    {
        "key": "space f f",
        "command": "workbench.action.quickOpen",
        "when": "vim.active && vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
    },
    {
        "key": "space f p",
        "command": "workbench.action.files.openFolder",
        "when": "vim.active && vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
    },
    {
        "key": "space f r",
        "command": "workbench.action.openRecent",
        "when": "vim.active && vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
    },
    {
        "key": "space f b",
        "command": "workbench.action.showAllEditors",
        "when": "vim.active && vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
    },
    {
        "key": "space f s",
        "command": "workbench.action.gotoSymbol",
        "when": "vim.active && vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
    },
    {
        "key": "space f o",
        "command": "workbench.action.findInFiles",
        "when": "vim.active && vim.mode == 'Visual' && (editorTextFocus || !inputFocus)"
    },


    // file explorer
    {
        "key": "space e",
        "command": "workbench.view.explorer",
        "when": "vim.active && vim.mode == 'Normal' && !filesExplorerFocus && (editorTextFocus || !inputFocus)"
    },
    {
        "key": "space e",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "vim.active && filesExplorerFocus && (editorTextFocus || !inputFocus)"
    },
    {
        "key": "r",
        "command": "renameFile",
        "when": "vim.active && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "y",
        "command": "filesExplorer.copy",
        "when": "vim.active && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "p",
        "command": "filesExplorer.paste",
        "when": "vim.active && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "x",
        "command": "filesExplorer.cut",
        "when": "vim.active && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "d",
        "command": "deleteFile",
        "when": "vim.active && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "a",
        "command": "explorer.newFile",
        "when": "vim.active && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "s",
        "command": "explorer.openToSide",
        "when": "vim.active && filesExplorerFocus && !inputFocus"
    },

    // code navigation
    {
        "key": "space g i",
        "command": "editor.action.goToImplementation",
        "when": "vim.active && vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "space g r",
        "command": "editor.action.goToReferences",
        "when": "vim.active && vim.mode == 'Normal' && editorTextFocus"
    },

    // problems
    {
        "key": "space p l",
        "command": "workbench.actions.view.problems",
        "when": "vim.active && vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "space p n",
        "command": "editor.action.marker.nextInFiles",
        "when": "vim.active && vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "space p p",
        "command": "editor.action.marker.prevInFiles",
        "when": "vim.active && vim.mode == 'Normal' && editorTextFocus"
    },
]