set relativenumber
set number
set scrolloff=8
set hlsearch
set ignorecase
set smartcase
set wrapscan
set showmode
set history=1000
set matchpairs
set clipboard=unnamed
set incsearch
set surround

" find files
nnoremap <space>o :action GotoFile<cr>
" error navigation
noremap <space>en :action GotoNextError<cr>:action ShowErrorDescription<cr>
noremap <space>ep :action GotoPreviousError<cr>:action ShowErrorDescription<cr>
" find
nnoremap <space>s /
nnoremap <space>r ?

" escape
inoremap fd <esc>
noremap <c-g> <esc>

" first non-null character
nnoremap 0 ^

" Leader bindings
let mapleader = ","
" save and goes to normal mode
nnoremap <leader>s :w<cr>:action Tool_External Tools_goimports<cr>
inoremap <leader>s <esc>:w<cr>:action Tool_External Tools_goimports<cr>
" end of line
inoremap <leader>e <esc>A
" close
nnoremap <leader>q :action CloseContent<cr>
inoremap <leader>q <esc>:action CloseContent<cr>
" Close other splits
nnoremap <leader>w :action VimWindowOnly<cr>
inoremap <leader>w <esc>:action VimWindowOnly<cr>
" go to symbol
nnoremap <leader>d :action FileStructurePopup<cr>
" toggle buffers
nnoremap <leader>g :action VimFilePrevious<cr>
" find in files
nnoremap <leader>a :action FindInPath<cr>
" vertical split
nnoremap <leader>v :vsplit<cr>
" Opened buffers
nnoremap <leader>b :action SearchEverywhere<cr>
" refactoring
nnoremap <leader>r :action RenameElement<cr>

" override point navigation
nnoremap <c-o> :action Back<cr>
nnoremap <c-i> :action Forward<cr>

" emacs bindings
inoremap <c-a> <esc>I
nnoremap <c-a> ^
inoremap <c-e> <esc>A
nnoremap <c-e> $
inoremap <c-d> <esc>lxi
inoremap <c-f> <c-o>l
inoremap <c-b> <c-o>h
inoremap <a-f> <c-o>w
inoremap <a-b> <c-o>b
nnoremap <a-f> w
nnoremap <a-b> b
inoremap <c-k> <esc>ld$a
